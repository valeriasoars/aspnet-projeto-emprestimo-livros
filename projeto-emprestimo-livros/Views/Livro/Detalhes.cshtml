
@using projeto_emprestimo_livros.Models
@model LivrosModel


<div class="container mt-5">
    <h2>Detalhes do Livro - @Model.Titulo</h2>


    <div class="text-center">
        <img src="/Imagem/@Model.Capa" style="width:150px; height:200px" />
    </div>

    <div class="mb-1">
        <label class="form-label">Titulo:</label>
        <input type="text" asp-for="Titulo" class="form-control shadow-none" disabled>

    </div>
    <div class="mb-1">
        <label class="form-label">Autor:</label>
        <input type="text" asp-for="Autor" class="form-control shadow-none" disabled>

    </div>
    <div class="mb-1">
        <label class="form-label">Descricao:</label>
        <textarea asp-for="Descricao" class="form-control shadow-none" disabled></textarea>

    </div>

    <div class="mb-1">
        <label class="form-label">Ano Publicação:</label>
        <input type="text" asp-for="AnoPublicacao" class="form-control shadow-none" disabled>

    </div>
    <div class="mb-1">
        <label class="form-label">Genero:</label>
        <input type="text" asp-for="Genero" class="form-control shadow-none" disabled>

    </div>


    <div class="mb-1">
        <label class="form-label">Quantidade em estoque:</label>
        <input type="number" asp-for="QuantidadeEmEstoque" class="form-control shadow-none" min="1" disabled>

    </div>
    <div class="mb-1">
        <label class="form-label">ISBN:</label>
        <input type="text" id="isbn" asp-for="ISBN" class="form-control shadow-none" disabled>

    </div>

    <div class="mb-1">
        <label class="form-label">Data de Cadastro:</label>
        <input type="text" id="isbn" asp-for="DataDeCadastro" class="form-control shadow-none" disabled>

    </div>

    <div class="mb-1">
        <label class="form-label">Data de Alteração:</label>
        <input type="text" id="isbn" asp-for="DataDeAlteracao" class="form-control shadow-none" disabled>

    </div>

    <div class="btn-box d-flex mt-3">

        <a type="submit" class="btn btn-info w-100" asp-controller="Livro" asp-action="Index"><i class="bi bi-arrow-left-circle"></i> Voltar</a>
    </div>

</div>